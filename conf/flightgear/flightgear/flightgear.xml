<?xml version='1.0'?>
<xefis-include>
	<module name='io/flightgear'>
		<input disabled='false'>
			<host>0.0.0.0</host>
			<port>9000</port>
			<properties>
				<directory path='/sensors'>
					<!-- gps -->
					<directory path='/gps'>
						<property name='position-longitude' path='/longitude'/>
						<property name='position-latitude' path='/latitude'/>
						<property name='position-amsl' path='/altitude-amsl'/>
					</directory>
					<!-- ahrs -->
					<directory path='/ahrs'>
						<property name='orientation-pitch' path='/pitch'/>
						<property name='orientation-roll' path='/roll'/>
						<property name='orientation-magnetic-heading' path='/magnetic-heading'/>
					</directory>
					<!-- airspeed -->
					<property name='ias' path='/speed/ias'/>
					<!-- pressure -->
					<property name='pressure' path='/pressure/static'/>
					<!-- temperature -->
					<property name='static-air-temperature' path='/temperature/static'/>
					<!-- radar altimeter -->
					<property name='altitude-agl' path='/radar-altimeter/agl'/>
					<!-- slip-skid -->
					<property name='slip-skid' path='/slip-skid/slip-skid'/>
					<!-- engine -->
					<property name='engine-n1' path='/engine/n1'/>
					<property name='engine-n2' path='/engine/n2'/>
					<property name='engine-egt' path='/engine/egt'/>
					<property name='engine-epr' path='/engine/epr'/>
				</directory>
				<directory path='/other/fgdata'>
					<property name='gs' path='/speed/ground-speed'/>
					<property name='tas' path='/speed/true-airspeed'/>
					<property name='mach' path='/speed/mach'/>
					<property name='wind-from-mag-heading' path='/wind/magnetic-orientation'/>
					<property name='wind-tas' path='/wind/speed'/>
					<property name='flight-path-marker-alpha' path='/flight-path/alpha'/>
					<property name='flight-path-marker-beta' path='/flight-path/beta'/>
					<property name='magnetic-track' path='/flight-path/magnetic-track'/>
					<property name='cbr' path='/altitude/vertical-speed'/>
					<property name='altitude' path='/altitude/amsl'/>
					<property name='orientation-true-heading' path='/orientation/true-heading'/>
					<property name='ias-minimum' path='/speed/ias-minimum'/>
					<property name='ias-maximum' path='/speed/ias-maximum'/>
					<property name='ias-lookahead' path='/speed/ias-lookahead'/>
					<property name='dme-distance' path='/localizer/distance'/>
					<property name='vertical-deviation' path='/localizer/vertical-deviation'/>
					<property name='lateral-deviation' path='/localizer/lateral-deviation'/>
					<property name='cmd-setting-altitude' path='/cmd-altitude'/>
					<property name='cmd-setting-heading' path='/cmd-magnetic-heading-and-track'/>
					<property name='cmd-setting-cbr' path='/cmd-vertical-speed'/>
					<property name='cmd-setting-ias' path='/cmd-ias'/>
				</directory>
			</properties>
		</input>
		<output disabled='false'>
			<host>127.0.0.1</host>
			<port>9001</port>
			<properties path='/systems/fly-by-wire'>
				<property name='ailerons' path='/ailerons'/>
				<property name='elevator' path='/elevator'/>
				<property name='rudder' path='/rudder'/>
			</properties>
		</output>
	</module>
</xefis-include>

