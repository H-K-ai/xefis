<?xml version='1.0'?>
<xefis-include>
	<layout type='vertical'>
		<item stretch-factor='8'>
			<module name='instruments/efis'>
				<settings>
					<setting name='speed-ladder.line-every' value='10'/>
					<setting name='speed-ladder.number-every' value='20'/>
					<setting name='speed-ladder.extent' value='124'/>
					<setting name='speed-ladder.minimum' value='20'/>
					<setting name='speed-ladder.maximum' value='900'/>
					<setting name='altitude-ladder.line-every' value='100'/>
					<setting name='altitude-ladder.number-every' value='200'/>
					<setting name='altitude-ladder.bold-every' value='500'/>
					<setting name='altitude-ladder.extent' value='825'/>
					<setting name='altitude.landing.warning.hi' value='1000 ft'/>
					<setting name='altitude.landing.warning.lo' value='500 ft'/>
				</settings>
				<properties>
					<property name='orientation.heading.numbers-visible' path='/settings/efis/heading-numbers-visible'/>
					<property name='speed.ias.serviceable' path='/systems/adc/speed/ias.serviceable'/>
					<property name='speed.ias' path='/systems/adc/speed/ias'/>
					<property name='speed.ias.lookahead' path='/systems/adc/speed/ias.lookahead'/>
					<property name='speed.mach' path='/systems/adc/speed/mach'/>
					<property name='orientation.serviceable' path='/systems/nc/orientation/serviceable'/>
					<property name='orientation.pitch' path='/systems/nc/orientation/pitch'/>
					<property name='orientation.roll' path='/systems/nc/orientation/roll'/>
					<property name='orientation.heading.magnetic' path='/systems/nc/orientation/heading/magnetic'/>
					<property name='orientation.heading.true' path='/systems/nc/orientation/heading/true'/>
					<property name='track.lateral.magnetic' path='/systems/nc/track/lateral/magnetic'/>
					<property name='track.lateral.true' path='/systems/nc/track/lateral/true'/>
					<property name='track.vertical' path='/systems/nc/track/vertical'/>
					<property name='slip-skid' path='/sensors/slip-skid/slip-skid'/>
					<property name='fpv.visible' path='/settings/efis/fpv-visible'/>
					<property name='aoa.alpha' path='/systems/aoa/alpha'/>
					<property name='aoa.warning-threshold' path='/settings/aoa/warning-threshold'/>
					<property name='aoa.critical' path='/systems/aoa/critical'/>
					<property name='aoa.critical.visible' path='/systems/aoa/critical.visible'/>
					<property name='altitude.amsl.serviceable' path='/systems/adc/altitude/amsl.serviceable'/>
					<property name='altitude.amsl' path='/systems/adc/altitude/amsl'/>
					<property name='altitude.amsl.lookahead' path='/systems/adc/altitude/amsl.lookahead'/>
