					<property name='altitude.agl' path='/sensors/radar-altimeter/altitude.agl'/>
					<property name='altitude.minimums.type' path='/settings/minimums/type'/>
					<property name='altitude.minimums.setting' path='/settings/minimums/setting'/>
					<property name='altitude.minimums.amsl' path='/settings/minimums/amsl'/>
					<property name='altitude.landing.amsl' path='/settings/landing.amsl'/>
					<property name='vertical-speed.serviceable' path='/systems/adc/vertical-speed/serviceable'/>
					<property name='vertical-speed' path='/systems/adc/vertical-speed/speed'/>
					<property name='vertical-speed.variometer' path='/systems/pc/total-energy-variometer'/>
					<property name='pressure.qnh' path='/settings/pressure/qnh'/>
					<property name='pressure.display-hpa' path='/settings/pressure/display-hpa'/>
					<property name='pressure.use-std' path='/settings/pressure/use-std'/>
					<property name='flight-director.serviceable' path='/systems/fd/serviceable'/>
					<property name='flight-director.cmd.visible' path='/settings/flight-director/cmd/visible'/>
					<property name='flight-director.cmd.ias' path='/settings/flight-director/cmd/ias'/>
					<property name='flight-director.cmd.altitude' path='/settings/flight-director/cmd/altitude'/>
					<property name='flight-director.cmd.altitude.acquired' path='/systems/fd/altitude-acquired'/>
					<property name='flight-director.cmd.vertical-speed' path='/settings/flight-director/cmd/vertical-speed'/>
					<property name='flight-director.guidance.visible' path='/settings/fd/guidance/visible'/>
					<property name='flight-director.guidance.pitch' path='/systems/fd/guidance/pitch'/>
					<property name='flight-director.guidance.roll' path='/systems/fd/guidance/roll'/>
					<property name='control-stick.visible' path='/settings/control-stick-visible'/>
					<property name='control-stick.pitch' path='/systems/fbw/stick/pitch'/>
					<property name='control-stick.roll' path='/systems/fbw/stick/roll'/>
					<directory path='//efis'>
						<directory path='/approach'>
							<property name='approach.reference-visible' path='/reference-visible' default='true'/>
							<property name='approach.type-hint' path='/type-hint' default='ILS'/>
							<property name='approach.localizer-id' path='/identifier-id' default='RSV'/>
							<property name='approach.dme-distance' path='/dme-distance' default='5.4 nm'/>
						</directory>
						<directory path='/flight-path'>
							<directory path='/deviation'>
								<property name='flight-path.deviation.vertical.serviceable' path='/vertical.serviceable' default='true'/>
								<property name='flight-path.deviation.vertical.app' path='/vertical.app' default='0.55 deg'/>
								<property name='flight-path.deviation.vertical.fp' path='/vertical.fp' default='-0.3 deg'/>
								<property name='flight-path.deviation.lateral.serviceable' path='/lateral.serviceable' default='true'/>
								<property name='flight-path.deviation.lateral.app' path='/lateral.app' default='0.11 deg'/>
								<property name='flight-path.deviation.lateral.fp' path='/lateral.fp' default='2.26 deg'/>
								<property name='flight-path.deviation.mixed-mode' path='/mixed-mode' default='true'/>
							</directory>
						</directory>
					</directory>
					<property name='flight-mode.hint.visible' path='/settings/flight-mode/visible'/>
					<property name='flight-mode.hint' path='/settings/flight-mode/hint'/>
