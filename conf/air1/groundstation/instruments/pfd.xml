					<property name='warning.ldgalt-flag' path='/settings/efis-flags/ldgalt-flag' default='false'/>
					<property name='warning.pitch-disagree' path='/settings/efis-flags/pitch-disagree' default='false'/>
					<property name='warning.roll-disagree' path='/settings/efis-flags/roll-disagree' default='false'/>
					<property name='warning.ias-disagree' path='/settings/efis-flags/ias-disagree' default='false'/>
					<property name='warning.altitude-disagree' path='/settings/efis-flags/altitude-disagree' default='false'/>
					<property name='warning.roll' path='/settings/efis-flags/roll-warning'/>
					<property name='warning.slip-skid' path='/settings/efis-flags/slip-skid-warning'/>
					<property name='style.old' path='/settings/efis/old-style'/>
					<property name='style.show-metric' path='/settings/efis/show-metric'/>
				</properties>
			</module>
		</item>
		<item stretch-factor='5'>
			<module name='instruments/hsi' instance='aux'>
				<properties>
					<property name='display-mode' path='/settings/hsi-aux/display-mode' default='2'/>
					<property name='range' path='/settings/hsi-aux/range'/>
					<property name='trend-vector-range' path='/settings/hsi-aux/trend-vector-range'/>
					<property name='track.center-on-track' path='/settings/hsi-aux/center-on-track'/>
					<property name='track.visible' path='/settings/hsi-aux/track-visible'/>
					<property name='cmd.visible' path='/settings/hsi-aux/cmd/visible'/>
					<property name='cmd.heading' path='/settings/hsi-aux/cmd/heading'/>
					<property name='cmd.track-visible' path='/settings/hsi-aux/cmd/track-visible'/>
					<property name='altitude.target.reach-distance' path='/systems/altacq/distance'/>
					<property name='orientation.display-true-heading' path='/settings/hsi-aux/display-true-heading'/>
					<property name='localizer-id' path='/settings/hsi-aux/localizer-id'/>
