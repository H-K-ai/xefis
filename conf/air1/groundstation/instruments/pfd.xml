					<property name='flight-mode.fma.vertical-hint' path='/settings/fma/vertical-hint'/>
					<property name='flight-mode.fma.vertical-small-hint' path='/settings/fma/vertical-small-hint'/>
					<property name='tcas.resolution-advisory.pitch.minimum' path='/systems/tcas/resolution-advisory/pitch.minimum'/>
					<property name='tcas.resolution-advisory.pitch.maximum' path='/systems/tcas/resolution-advisory/pitch.maximum'/>
					<property name='tcas.resolution-advisory.vertical-speed.minimum' path='/systems/tcas/resolution-advisory/vertical-speed.minimum'/>
					<property name='tcas.resolution-advisory.vertical-speed.maximum' path='/systems/tcas/resolution-advisory/vertical-speed.maximum'/>
