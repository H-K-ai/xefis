			<property name='input.1.reference' path='/systems/vor/home/reference'/>
			<property name='input.1.identifier' path='/systems/vor/home/identifier' default='HOME'/>
			<property name='input.1.radial.magnetic' path='/systems/vor/home/radial.magnetic'/>
			<property name='input.1.reciprocal.magnetic' path='/systems/vor/home/reciprocal.magnetic'/>
			<property name='input.1.distance' path='/systems/vor/home/distance'/>
			<property name='input.1.eta' path='/systems/vor/home/eta'/>
			<!-- Output -->
			<property name='output.reference' path='/systems/navaid/right/reference'/>
			<property name='output.identifier' path='/systems/navaid/right/identifier'/>
			<property name='output.radial.magnetic' path='/systems/navaid/right/radial.magnetic'/>
			<property name='output.reciprocal.magnetic' path='/systems/navaid/right/reciprocal.magnetic'/>
			<property name='output.distance' path='/systems/navaid/right/distance'/>
			<property name='output.eta' path='/systems/navaid/right/eta'/>
		</properties>
	</module>
</xefis-include>

