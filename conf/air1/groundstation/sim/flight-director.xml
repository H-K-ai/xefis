<?xml version='1.0'?>
<xefis-include>
	<module name='systems/flight-director'>
		<properties>
			<property name='disengage-ap' path='/systems/flight-director/disengage-ap'/>
			<directory path='/systems/flight-director/guidance'>
				<property name='output.pitch' path='/pitch'/>
				<property name='output.roll' path='/roll'/>
			</directory>
			<directory path='/settings/flight-director'>
				<property name='enabled' path='/enabled' default='true'/>
				<property name='orientation.pitch-limit.max' path='/limits/pitch.max' default='10 deg'/>
				<property name='orientation.pitch-limit.min' path='/limits/pitch.min' default='-10 deg'/>
				<property name='orientation.roll-limit' path='/limits/roll' default='25 deg'/>
				<property name='cmd.roll-mode' path='/cmd/roll-mode' default='0'/>
				<property name='cmd.pitch-mode' path='/cmd/pitch-mode' default='1'/>
				<property name='cmd.heading.magnetic' path='/cmd/magnetic-heading-track'/>
				<property name='cmd.track.magnetic' path='/cmd/magnetic-heading-track'/>
				<property name='cmd.altitude' path='/cmd/altitude'/>
				<property name='cmd.ias' path='/cmd/ias'/>
				<property name='cmd.vertical-speed' path='/cmd/vertical-speed'/>
				<property name='cmd.fpa' path='/cmd/fpa'/>
			</directory>
			<directory path='/systems/nc'>
				<property name='measured.heading.magnetic' path='/orientation/heading/magnetic'/>
				<property name='measured.track.magnetic' path='/track/lateral/magnetic'/>
			</directory>
			<directory path='/systems/adc'>
				<property name='measured.altitude' path='/altitude/amsl'/>
				<property name='measured.ias' path='/speed/ias'/>
				<property name='measured.vertical-speed' path='/vertical-speed/speed'/>
				<property name='measured.fpa' path='/fpm/alpha'/>
			</directory>
		</properties>
	</module>
</xefis-include>

