<?xml version='1.0'?>
<xefis-include>
	<module name='io/joystick' instance='throttle'>
		<device>/dev/input/by-id/usb-Thrustmaster_Throttle_-_HOTAS_Warthog-joystick</device>
		<path>/input/throttle</path>
		<!-- Throttle R -->
		<axis id='2'>
			<reverse/>
			<output>
				<minimum>0</minimum>
				<maximum>1</maximum>
			</output>
		</axis>
		<!-- Throttle L -->
		<axis id='3'>
			<reverse/>
			<output>
				<minimum>0</minimum>
				<maximum>1</maximum>
			</output>
		</axis>
	</module>
	<module name='io/joystick' instance='joystick'>
		<device>/dev/input/by-id/usb-Thustmaster_Joystick_-_HOTAS_Warthog-joystick</device>
		<path>/input/joystick</path>
		<!-- Roll -->
		<axis id='0'>
			<center>0.0</center>
			<dead-zone>0.005</dead-zone>
			<power>1.5</power>
		</axis>
		<!-- Pitch -->
		<axis id='1'>
			<reverse/>
			<center>0.0</center>
			<dead-zone>0.005</dead-zone>
			<power>1.5</power>
		</axis>
	</module>
	<module name='io/joystick' instance='pedals'>
		<device>/dev/input/js0</device>
		<path>/input/pedals</path>
		<!-- Pedals -->
		<axis id='2'>
			<power>3</power>
		</axis>
	</module>
</xefis-include>

