<?xml version='1.0'?>
<xefis-config version='1.0'>
	<settings>
		<setting name='navaids.enable' value='false'/>
		<setting name='scale.pen' value='0.95'/>
		<setting name='scale.font' value='1.0'/>
	</settings>
	<modules>
		<include name='groundstation/hardware/joystick.xml'/>
		<!--include name='groundstation/systems/state.xml'/-->
		<include name='groundstation/systems/adc.xml'/>
		<include name='groundstation/systems/nc.xml'/>
		<include name='groundstation/systems/rcms.xml'/>
		<include name='groundstation/systems/altacq.xml'/>
		<if mode=''>
			<include name='groundstation/comm/link.xml'/>
			<include name='groundstation/comm/udp.xml'/>
		</if>
		<if mode='fg'>
			<include name='groundstation/sim/flightgear.xml'/>
			<include name='groundstation/sim/flight-director.xml'/>
			<include name='groundstation/sim/fly-by-wire.xml'/>
		</if>
	</modules>
	<windows>
		<window width='1366' height='768' full-screen='false'>
			<layout type='horizontal'>
				<item stretch-factor='4'>
					<include name='groundstation/instruments/pfd.xml'/>
				</item>
				<separator/>
				<item stretch-factor='4'>
					<include name='groundstation/instruments/mfd.xml'/>
				</item>
			</layout>
		</window>
	</windows>
</xefis-config>

