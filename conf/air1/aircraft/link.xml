<?xml version='1.0'?>
<xefis-include>
	<module name='io/link'>
		<properties>
			<property name='link-valid' path='/link/valid'/>
			<property name='failsafes' path='/link/failsafes'/>
			<property name='reacquires' path='/link/reacquires'/>
			<property name='error-bytes' path='/link/error-bytes'/>
			<property name='valid-packets' path='/link/valid-packets'/>
		</properties>
		<output frequency='30 Hz'>
			<udp>
				<host>192.168.0.1</host>
				<port>9951</port>
			</udp>
		</output>
		<protocol>
			<packet magic='ca:fe'>
				<signature random-bytes='2' signature-bytes='4' key='00:11:22:33'>
					<property type='pressure' bytes='4' path='/sensors/pressure/pressure'/>
					<property type='float' bytes='2' path='/sensors/temperature/outside.k'/>
					<bitfield>
						<property type='boolean' path='/settings/altimeter/use-std-pressure'/>
						<property type='integer' bits='2' path='/link/error-bytes'/>
					</bitfield>
				</signature>
			</packet>
		</protocol>
	</module>
</xefis-include>

