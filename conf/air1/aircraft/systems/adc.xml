<?xml version='1.0'?>
<xefis-include>
	<module name='systems/adc'>
		<settings>
			<setting name='ias.valid-minimum' value='10 kt'/>
			<setting name='ias.valid-maximum' value='900 kt'/>
		</settings>
		<properties>
			<!-- Input -->
			<directory path='//settings/altimeter'>
				<property name='settings.pressure.use-std' path='/use-std-pressure'/>
				<property name='settings.pressure.qnh' path='/pressure.qnh'/>
			</directory>
			<directory path='//sensors'>
				<property name='pressure.static' path='/pressure/static'/>
				<property name='ias' path='/airspeed/ias'/>
				<property name='air-temperature.total' path='/air-temperature/total'/>
			</directory>
			<!-- Output -->
			<directory path='//systems/adc'>
				<directory path='/altitude/amsl'>
					<property name='altitude.amsl.serviceable' path='/serviceable'/>
					<property name='altitude.amsl' path='/altitude'/>
					<property name='altitude.amsl.lookahead' path='/altitude.lookahead'/>
					<property name='altitude.amsl.qnh' path='/altitude.qnh'/>
					<property name='altitude.amsl.std' path='/altitude.std'/>
				</directory>
				<directory path='/performance'>
					<property name='density-altitude' path='/density-altitude'/>
				</directory>
				<directory path='/speed'>
					<property name='speed.ias.serviceable' path='/ias.serviceable'/>
					<property name='speed.ias' path='/ias'/>
					<property name='speed.ias.lookahead' path='/ias.lookahead'/>
					<property name='speed.tas' path='/tas'/>
					<property name='speed.mach' path='/mach'/>
					<property name='speed.sound' path='/sound'/>
				</directory>
				<directory path='/speed/vertical-speed'>
					<property name='vertical-speed.serviceable' path='/serviceable'/>
					<property name='vertical-speed' path='/vertical-speed'/>
				</directory>
				<property name='air-temperature.static' path='/air-temperature/static'/>
			</directory>
		</properties>
	</module>
</xefis-include>

