<?xml version='1.0'?>
<xefis-include>
	<module name='io/bmp085'>
		<i2c>
			<bus>1</bus>
			<address>0x77</address>
		</i2c>
		<settings>
			<setting name='pressure.read-interval' value='50 ms'/>
			<setting name='temperature.read-interval' value='500 ms'/>
		</settings>
		<properties>
			<directory path='/sensors'>
				<property name='pressure' path='/pressure/pressure'/>
				<property name='temperature' path='/temperature/outside.k'/>
			</directory>
		</properties>
	</module>
</xefis-include>

