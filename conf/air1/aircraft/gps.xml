<?xml version='1.0'?>
<xefis-include>
	<module name='io/gps'>
		<device>/dev/ttyAMA0</device>
		<receiver-accuracy>1.8 m</receiver-accuracy>
		<synchronize-system-clock/>
		<default-baud-rate>9600</default-baud-rate>
		<baud-rate>38400</baud-rate>
		<!--debug-mode/-->
		<initialization>
			<pmtk comment='update rate'>PMTK220,100</pmtk>
			<pmtk comment='enable SBAS'>PMTK313,1</pmtk>
			<pmtk comment='integrity SBAS mode'>PMTK319,1</pmtk>
		</initialization>
		<properties>
			<directory path='/sensors'>
				<property name='serviceable' path='/gps/serviceable'/>
				<property name='read-errors' path='/gps/read-errors'/>
				<property name='fix-quality' path='/gps/fix-quality'/>
				<property name='type-of-fix' path='/gps/type-of-fix'/>
				<property name='latitude' path='/gps/latitude'/>
				<property name='longitude' path='/gps/longitude'/>
				<property name='altitude-amsl' path='/gps/altitude-amsl'/>
				<property name='altitude-above-wgs84' path='/gps/altitude-above-wgs84'/>
				<property name='groundspeed' path='/gps/groundspeed'/>
				<property name='track' path='/gps/track'/>
				<property name='tracked-satellites' path='/gps/tracked-satellites'/>
				<property name='hdop' path='/gps/hdop'/>
				<property name='vdop' path='/gps/vdop'/>
				<property name='lateral-accuracy' path='/gps/lateral-accuracy'/>
				<property name='vertical-accuracy' path='/gps/vertical-accuracy'/>
				<property name='dgps-station-id' path='/gps/dgps-station-id'/>
				<property name='update-timestamp' path='/gps/update-timestamp'/>
				<property name='epoch-time' path='/gps/epoch-time'/>
			</directory>
		</properties>
	</module>
</xefis-include>

