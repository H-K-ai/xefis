<?xml version='1.0'?>
<xefis-include>
	<module name='systems/flight-director'>
		<properties>
			<directory path='/systems/flight-director'>
				<property name='output.pitch' path='/pitch'/>
				<property name='output.roll' path='/roll'/>
				<property name='mode.vertical.hint' path='/hints/vertical-hint'/>
				<property name='mode.lateral.hint' path='/hints/lateral-hint'/>
			</directory>
			<directory path='/settings/flight-director'>
				<property name='enabled' path='/enabled'/>
				<property name='mode.lateral' path='/lateral-mode'/>
				<property name='mode.vertical' path='/vertical-mode'/>
				<property name='orientation.pitch-limit' path='/limits/pitch'/>
				<property name='orientation.roll-limit' path='/limits/roll'/>
				<property name='cmd.heading.magnetic' path='/cmd-magnetic-heading-and-track'/>
				<property name='cmd.track.magnetic' path='/cmd-magnetic-heading-and-track'/>
				<property name='cmd.altitude' path='/cmd-altitude'/>
				<property name='cmd.vertical-speed' path='/cmd-vertical-speed'/>
				<property name='cmd.fpa' path='/cmd-fpa'/>
			</directory>
			<directory path='/systems/fdc'>
				<property name='measured.heading.magnetic' path='/orientation/magnetic-heading'/>
				<property name='measured.track.magnetic' path='/track/lateral-magnetic'/>
				<property name='measured.altitude' path='/pressure-altitude/amsl'/>
				<property name='measured.vertical-speed' path='/pressure-altitude/climb-rate'/>
				<property name='measured.fpa' path='/fpm/alpha'/>
			</directory>
		</properties>
	</module>
</xefis-include>

