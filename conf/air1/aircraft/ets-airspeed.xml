<?xml version='1.0'?>
<xefis-include>
	<module name='io/ets-airspeed'>
		<i2c>
			<bus>1</bus>
			<address>0x75</address>
		</i2c>
		<settings>
			<setting name='airspeed.read-interval' value='100 ms'/>
			<setting name='airspeed.smoothing-time' value='100 ms'/>
		</settings>
		<properties>
			<directory path='/sensors'>
				<property name='serviceable' path='/airspeed/serviceable'/>
				<property name='airspeed.minimum' path='/airspeed/minimum'/>
				<property name='airspeed.maximum' path='/airspeed/maximum'/>
				<property name='airspeed' path='/speed/airspeed'/>
			</directory>
		</properties>
	</module>
</xefis-include>

