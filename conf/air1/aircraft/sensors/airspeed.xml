<?xml version='1.0'?>
<xefis-include>
	<module name='io/ets-airspeed'>
		<i2c>
			<bus>1</bus>
			<address>0x75</address>
		</i2c>
		<settings>
			<setting name='airspeed.read-interval' value='100 ms'/>
			<setting name='airspeed.smoothing-time' value='100 ms'/>
		</settings>
		<properties path='/sensors'>
			<directory path='/airspeed'>
				<property name='serviceable' path='/serviceable'/>
				<property name='airspeed.minimum' path='/minimum'/>
				<property name='airspeed.maximum' path='/maximum'/>
				<property name='airspeed' path='/ias'/>
			</directory>
		</properties>
	</module>
</xefis-include>

