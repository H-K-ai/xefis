<?xml version="1.0"?>
<PropertyList>
	<generic>
		<comment>
			Copy this file to the 'Protocol' directory of the FlightGear (usually /usr/share/flightgear/data/Protocol/).
			Run FlightGear with '--generic=socket,in,60,127.0.0.1,9001,udp,xefis-in' on command line.
			Configure the "io/flightgear" module in the Xefis configuration files. Use the same UDP port addresses.
		</comment>
		<input>
			<binary_mode>true</binary_mode>
			<byte_order>host</byte_order>
			<chunk>
				<name>a</name>
				<type>float</type>
				<node>/controls/flight/aileron</node>
			</chunk>
			<chunk>
				<name>e</name>
				<type>float</type>
				<node>/controls/flight/elevator</node>
			</chunk>
			<chunk>
				<name>r</name>
				<type>float</type>
				<node>/controls/flight/rudder</node>
			</chunk>
			<chunk>
				<name>t1</name>
				<type>float</type>
				<node>/controls/engines/engine/throttle</node>
			</chunk>
			<chunk>
				<name>t2</name>
				<type>float</type>
				<node>/controls/engines/engine[1]/throttle</node>
			</chunk>
			<chunk>
				<name>f</name>
				<type>float</type>
				<node>/controls/flight/flaps</node>
			</chunk>
			<!--chunk>
				<name>f</name>
				<type>float</type>
				<node>/controls/flight/flaps</node>
			</chunk>
			<chunk>
				<name>s</name>
				<type>float</type>
				<node>/controls/flight/slats</node>
			</chunk>
			<chunk>
				<name>sb</name>
				<type>float</type>
				<node>/controls/flight/speedbrake</node>
			</chunk>
			<chunk>
				<name>sp</name>
				<type>float</type>
				<node>/controls/flight/spoilers</node>
			</chunk-->
		</input>
	</generic>
</PropertyList>
