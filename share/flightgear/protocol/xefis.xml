<?xml version="1.0"?>
<PropertyList>
	<generic>
		<comment>
			Copy this file to the 'Protocol' directory of the FlightGear (usually /usr/share/flightgear/data/Protocol/).
			Run FlightGear with '--generic=socket,bi,40,127.0.0.1,9000,udp,xefis' on command line.
			Configure the "io/flightgear" module in the Xefis configuration files. Use the same UDP port addresses.
		</comment>
		<input>
			<line_separator>newline</line_separator>
			<var_separator>,</var_separator>

			<!-- Surfaces -->
			<chunk>
				<name>aileron</name>
				<node>/controls/flight/aileron</node>
				<type>float</type>
				<format>%f</format>
			</chunk>
			<chunk>
				<name>elevator</name>
				<node>/controls/flight/elevator</node>
				<type>float</type>
				<format>%f</format>
			</chunk>
			<chunk>
				<name>rudder</name>
				<node>/controls/flight/rudder</node>
				<type>float</type>
				<format>%f</format>
			</chunk>
			<chunk>
				<name>aileron-trim</name>
				<node>/controls/flight/aileron-trim</node>
				<type>float</type>
				<format>%f</format>
			</chunk>
			<chunk>
				<name>elevator-trim</name>
				<node>/controls/flight/elevator-trim</node>
				<type>float</type>
				<format>%f</format>
			</chunk>
			<chunk>
				<name>rudder-trim</name>
				<node>/controls/flight/rudder-trim</node>
				<type>float</type>
				<format>%f</format>
			</chunk>
			<chunk>
				<name>flaps</name>
				<node>/controls/flight/flaps</node>
				<type>float</type>
				<format>%f</format>
			</chunk>
			<chunk>
				<name>slats</name>
				<node>/controls/flight/slats</node>
				<type>float</type>
				<format>%f</format>
			</chunk>
			<chunk>
				<name>speedbrake</name>
				<node>/controls/flight/speedbrake</node>
				<type>float</type>
				<format>%f</format>
			</chunk>
			<chunk>
				<name>spoilers</name>
				<node>/controls/flight/spoilers</node>
				<type>float</type>
				<format>%f</format>
			</chunk>
		</input>
		<output>
			<line_separator>newline</line_separator>
			<var_separator>,</var_separator>

			<!-- Autopilot/autothrottle -->
			<chunk>
				<name>ap-alt-sel</name>
				<type>float</type>
				<format>ap-alt-sel=%f</format>
				<node>/autopilot/settings/target-altitude-ft</node>
			</chunk>
			<chunk>
				<name>ap-cbr-sel</name>
				<type>float</type>
				<format>ap-cbr-sel=%f</format>
				<node>/autopilot/settings/vertical-speed-fpm</node>
			</chunk>
			<chunk>
				<name>at-speed-sel</name>
				<type>float</type>
				<format>at-speed-sel=%f</format>
				<node>/autopilot/settings/target-speed-kt</node>
			</chunk>
			<chunk>
				<name>ap-hdg-sel</name>
				<type>float</type>
				<format>ap-hdg-sel=%f</format>
				<node>/autopilot/settings/heading-bug-deg</node>
			</chunk>
			<chunk>
				<name>fd-pitch</name>
				<type>float</type>
				<format>fd-pitch=%f</format>
				<node>/autopilot/internal/target-pitch-deg</node>
			</chunk>
			<chunk>
				<name>fd-roll</name>
				<type>float</type>
				<format>fd-roll=%f</format>
				<node>/autopilot/internal/target-roll-deg</node>
			</chunk>
			<!-- Speed -->
			<chunk>
				<name>ias</name>
				<type>float</type>
				<format>ias=%f</format>
				<node>/instrumentation/airspeed-indicator/indicated-speed-kt</node>
			</chunk>
			<chunk>
				<name>tas</name>
				<type>float</type>
				<format>tas=%f</format>
				<node>/instrumentation/airspeed-indicator/true-speed-kt</node>
			</chunk>
			<chunk>
				<name>gs</name>
				<type>float</type>
				<format>gs=%f</format>
				<node>/velocities/groundspeed-kt</node>
			</chunk>
			<chunk>
				<name>mach</name>
				<type>float</type>
				<format>mach=%f</format>
				<node>/instrumentation/airspeed-indicator/indicated-mach</node>
			</chunk>
			<chunk>
				<name>ias-tend</name>
				<type>float</type>
				<format>ias-tend=%f</format>
				<node>/autopilot/internal/lookahead-10-sec-airspeed-kt</node>
			</chunk>
			<chunk>
				<name>ias-max</name>
				<type>float</type>
				<format>ias-max=%f</format>
				<node>/instrumentation/afds/max-airspeed-kts</node>
			</chunk>
			<chunk>
				<name>ias-min</name>
				<type>float</type>
				<format>ias-min=%f</format>
				<node>/instrumentation/weu/state/stall-speed</node>
			</chunk>
			<!-- Altitude -->
			<chunk>
				<name>altitude</name>
				<type>float</type>
				<format>altitude=%f</format>
				<node>/instrumentation/altimeter/indicated-altitude-ft</node>
			</chunk>
			<chunk>
				<name>alt-agl</name>
				<type>float</type>
				<format>alt-agl=%f</format>
				<node>/position/gear-agl-ft</node>
			</chunk>
			<chunk>
				<name>altimeter-inhg</name>
				<type>float</type>
				<format>altimeter-inhg=%f</format>
				<node>/instrumentation/altimeter/setting-inhg</node>
			</chunk>
			<chunk>
				<name>cbr-fpm</name>
				<type>float</type>
				<format>cbr=%f</format>
				<node>/instrumentation/vertical-speed-indicator/indicated-speed-fpm</node>
			</chunk>
			<!-- Orientation -->
			<chunk>
				<name>pitch</name>
				<type>float</type>
				<format>pitch=%f</format>
				<node>/orientation/pitch-deg</node>
			</chunk>
			<chunk>
				<name>roll</name>
				<type>float</type>
				<format>roll=%f</format>
				<node>/orientation/roll-deg</node>
			</chunk>
			<chunk>
				<name>heading</name>
				<type>float</type>
				<format>heading=%f</format>
				<node>/orientation/heading-magnetic-deg</node>
			</chunk>
			<!-- Flight path -->
			<chunk>
				<name>alpha</name>
				<type>float</type>
				<format>alpha=%f</format>
				<node>/orientation/alpha-deg</node>
			</chunk>
			<chunk>
				<name>beta</name>
				<type>float</type>
				<format>beta=%f</format>
				<node>/orientation/side-slip-deg</node>
			</chunk>
			<chunk>
				<name>track</name>
				<type>float</type>
				<format>track=%f</format>
				<node>/orientation/track-magnetic-deg</node>
			</chunk>
			<!-- Navigation -->
			<chunk>
				<name>nav</name>
				<type>int</type>
				<format>nav=%d</format>
				<node>/instrumentation/nav/data-is-valid</node>
			</chunk>
			<chunk>
				<name>nav-gs-ok</name>
				<type>int</type>
				<format>nav-gs-ok=%d</format>
				<node>/instrumentation/nav/gs-in-range</node>
			</chunk>
			<chunk>
				<name>nav-gs</name>
				<type>float</type>
				<format>nav-gs=%f</format>
				<node>/instrumentation/nav/gs-needle-deflection-norm</node>
			</chunk>
			<chunk>
				<name>nav-hd-ok</name>
				<type>int</type>
				<format>nav-hd-ok=%d</format>
				<node>/instrumentation/nav/in-range</node>
			</chunk>
			<chunk>
				<name>nav-hd</name>
				<type>float</type>
				<format>nav-hd=%f</format>
				<node>/instrumentation/nav/heading-needle-deflection-norm</node>
			</chunk>
			<chunk>
				<name>dme-ok</name>
				<type>int</type>
				<format>dme-ok=%d</format>
				<node>/instrumentation/dme/in-range</node>
			</chunk>
			<chunk>
				<name>dme</name>
				<type>float</type>
				<format>dme=%f</format>
				<node>/instrumentation/dme/indicated-distance-nm</node>
			</chunk>
			<!-- Other -->
			<chunk>
				<name>slip-skid</name>
				<type>float</type>
				<format>ss=%f</format>
				<node>/instrumentation/slip-skid-ball/indicated-slip-skid</node>
			</chunk>

			<!-- EICAS -->

			<!-- Sensors -->
			<!--chunk>
				<name>time</name>
				<format>time=%d</format>
				<node>/instrumentation/clock/indicated-sec</node>
			</chunk-->
			<!--chunk>
				<name>static-pressure</name>
				<type>float</type>
				<format>static=%f</format>
				<node>/systems/static/pressure-inhg</node>
			</chunk-->
			<chunk>
				<name>throttle</name>
				<type>float</type>
				<format>thr=%f</format>
				<node>/controls/engines/engine/throttle</node>
			</chunk>
			<chunk>
				<name>epr</name>
				<type>float</type>
				<format>epr=%f</format>
				<node>/engines/engine/epr</node>
			</chunk>
			<chunk>
				<name>n1</name>
				<type>float</type>
				<format>n1=%f</format>
				<node>/engines/engine/n1</node>
			</chunk>
			<chunk>
				<name>n2</name>
				<type>float</type>
				<format>n2=%f</format>
				<node>/engines/engine/n2</node>
			</chunk>
			<chunk>
				<name>egt</name>
				<type>float</type>
				<format>egt=%f</format>
				<node>/engines/engine/egt-degf</node>
			</chunk>
		</output>
	</generic>
</PropertyList>
