<?xml version='1.0'?>
<xefis-include>
	<modules>
		<module name='io/flightgear'>
			<input disabled='false'>
				<host>0.0.0.0</host>
				<port>9000</port>
				<properties>
					<directory path='/sensors'>
						<!-- gps -->
						<property name='position-longitude' path='/gps/longitude'/>
						<property name='position-latitude' path='/gps/latitude'/>
						<property name='position-amsl' path='/gps/altitude-amsl'/>
						<!-- imu -->
						<property name='orientation-pitch' path='/imu/pitch'/>
						<property name='orientation-roll' path='/imu/roll'/>
						<property name='orientation-magnetic-heading' path='/compass/magnetic-heading'/>
						<!-- airspeed -->
						<property name='ias' path='/speed/ias'/>
						<!-- pressure -->
						<property name='pressure' path='/pressure/pressure'/>
						<!-- temperature -->
						<property name='outside-air-temperature' path='/temperature/outside.k'/>
						<!-- radar altimeter -->
						<property name='altitude-agl' path='/radar-altimeter/agl'/>
						<!-- slip-skid -->
						<property name='slip-skid' path='/slip-skid/slip-skid'/>
						<property name='slip-skid-limit' path='/slip-skid/limit'/>
						<!-- engine -->
						<property name='engine-n1' path='/engine/n1'/>
						<property name='engine-n2' path='/engine/n2'/>
						<property name='engine-egt' path='/engine/egt'/>
						<property name='engine-epr' path='/engine/epr'/>
					</directory>
					<directory path='/systems/fgdata'>
						<property name='gs' path='/speed/ground-speed'/>
						<property name='tas' path='/speed/true-airspeed'/>
						<property name='mach' path='/speed/mach'/>
						<property name='wind-from-mag-heading' path='/wind/magnetic-orientation'/>
						<property name='wind-tas' path='/wind/speed'/>
						<property name='flight-path-marker-alpha' path='/flight-path/alpha'/>
						<property name='flight-path-marker-beta' path='/flight-path/beta'/>
						<property name='magnetic-track' path='/flight-path/magnetic-track'/>
						<property name='cbr' path='/altitude/vertical-speed'/>
						<property name='altitude' path='/altitude/amsl'/>
						<property name='orientation-true-heading' path='/orientation/true-heading'/>
						<property name='ias-minimum' path='/speed/ias-minimum'/>
						<property name='ias-warning' path='/speed/ias-warning'/>
						<property name='ias-maximum' path='/speed/ias-maximum'/>
						<property name='ias-lookahead' path='/speed/ias-lookahead'/>
						<property name='dme-distance' path='/localizer/distance'/>
						<property name='vertical-deviation' path='/localizer/vertical-deviation'/>
						<property name='lateral-deviation' path='/localizer/lateral-deviation'/>
					</directory>
					<directory path='/systems/flight-director'>
						<!-- Emulate some of the AP settings -->
						<property name='cmd-setting-altitude' path='/settings/altitude'/>
						<property name='cmd-setting-heading' path='/settings/magnetic-heading-and-track'/>
						<property name='cmd-setting-cbr' path='/settings/vertical-speed'/>
						<property name='cmd-setting-ias' path='//systems/autothrottle/settings/ias'/>
					</directory>
				</properties>
			</input>
			<output disabled='false'>
				<host>127.0.0.1</host>
				<port>9001</port>
				<properties path='/systems/fly-by-wire'>
					<property name='ailerons' path='/ailerons' default='0.0'/>
					<property name='elevator' path='/elevator' default='0.0'/>
					<property name='rudder' path='/rudder' default='0.0'/>
					<property name='ailerons-trim' path='/ailerons-trim' default='0.0'/>
					<property name='elevator-trim' path='/elevator-trim' default='0.0'/>
					<property name='rudder-trim' path='/rudder-trim' default='0.0'/>
				</properties>
			</output>
		</module>
		<module name='io/joystick'>
			<device>/dev/input/by-id/usb-Saitek_Saitek_X52_Pro_Flight_Control_System-joystick</device>
			<path>/input/main</path>
			<axis id='0'>
				<center>0.00259</center>
				<dead-zone>0.016</dead-zone>
			</axis>
			<axis id='1'>
				<center>0.00259</center>
				<dead-zone>0.016</dead-zone>
			</axis>
		</module>
		<module name='io/joystick'>
			<device>/dev/input/js0</device>
			<path>/input/rudder</path>
			<axis id='2'>
				<power>3</power>
			</axis>
		</module>
		<module name='io/mouse' disabled='true'>
			<dead-zone-x>0.05</dead-zone-x>
			<dead-zone-y>0.05</dead-zone-y>
			<acceleration-x>2.0</acceleration-x>
			<acceleration-y>2.0</acceleration-y>
			<speed-x>1.0</speed-x>
			<speed-y>1.0</speed-y>
			<properties>
				<property name='axis-x' path='/input/main/axis/9'/>
				<property name='axis-y' path='/input/main/axis/10'/>
				<property name='button' path='/input/main/button/15'/>
			</properties>
		</module>
	</modules>
</xefis-include>

