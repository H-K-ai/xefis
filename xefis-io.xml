<?xml version='1.0'?>
<xefis-include>
	<modules>
		<module name='io/flightgear'>
			<input disabled='false'>
				<host>0.0.0.0</host>
				<port>9000</port>
				<properties>
					<directory path='/sensors'>
						<!-- gps -->
						<property name='position-longitude' path='/gps/longitude.deg'/>
						<property name='position-latitude' path='/gps/latitude.deg'/>
						<property name='position-amsl' path='/gps/altitude-amsl.ft'/>
						<!-- imu -->
						<property name='orientation-pitch' path='/imu/pitch.deg'/>
						<property name='orientation-roll' path='/imu/roll.deg'/>
						<property name='orientation-magnetic-heading' path='/compass/magnetic-heading.deg'/>
						<!-- airspeed -->
						<property name='ias' path='/speed/ias.kt'/>
						<!-- pressure -->
						<property name='pressure' path='/pressure/pressure.inhg'/>
						<!-- temperature -->
						<property name='outside-air-temperature' path='/temperature/outside.k'/>
						<!-- radar altimeter -->
						<property name='altitude-agl' path='/radar-altimeter/agl.ft'/>
						<!-- slip-skid -->
						<property name='slip-skid' path='/slip-skid/slip-skid.g'/>
						<property name='slip-skid-limit' path='/slip-skid/limit.g'/>
						<!-- engine -->
						<property name='engine-n1' path='/engine/n1.pct'/>
						<property name='engine-n2' path='/engine/n2.pct'/>
						<property name='engine-egt' path='/engine/egt.degc'/>
						<property name='engine-epr' path='/engine/epr'/>
					</directory>
					<directory path='/systems/fgdata'>
						<property name='gs' path='/speed/ground-speed.kt'/>
						<property name='tas' path='/speed/true-airspeed.kt'/>
						<property name='mach' path='/speed/mach'/>
						<property name='wind-from-mag-heading' path='/wind/magnetic-orientation.deg'/>
						<property name='wind-tas' path='/wind/speed.kt'/>
						<property name='flight-path-marker-alpha' path='/flight-path/alpha.deg'/>
						<property name='flight-path-marker-beta' path='/flight-path/beta.deg'/>
						<property name='magnetic-track' path='/flight-path/magnetic-track.deg'/>
						<property name='cbr' path='/altitude/vertical-speed.fpm'/>
						<property name='altitude' path='/altitude/amsl.ft'/>
						<property name='orientation-true-heading' path='/orientation/true-heading.deg'/>
						<property name='ias-minimum' path='/speed/ias-minimum.kt'/>
						<property name='ias-warning' path='/speed/ias-warning.kt'/>
						<property name='ias-maximum' path='/speed/ias-maximum.kt'/>
						<property name='ias-lookahead' path='/speed/ias-lookahead.kt'/>
						<property name='dme-distance' path='/localizer/distance.nm'/>
						<property name='vertical-deviation' path='/localizer/vertical-deviation.deg'/>
						<property name='lateral-deviation' path='/localizer/lateral-deviation.deg'/>
					</directory>
					<directory path='/systems/flight-director'>
						<!-- Emulate some of the AP settings -->
						<property name='cmd-setting-altitude' path='/settings/altitude.ft'/>
						<property name='cmd-setting-heading' path='/settings/magnetic-heading-and-track.deg'/>
						<property name='cmd-setting-cbr' path='/settings/vertical-speed.fpm'/>
						<property name='cmd-setting-ias' path='//systems/autothrottle/settings/ias.kt'/>
					</directory>
				</properties>
			</input>
			<output disabled='false'>
				<host>127.0.0.1</host>
				<port>9001</port>
				<properties path='/systems/fly-by-wire'>
					<property name='ailerons' path='/ailerons' default='0.0'/>
					<property name='elevator' path='/elevator' default='0.0'/>
					<property name='rudder' path='/rudder' default='0.0'/>
					<property name='ailerons-trim' path='/ailerons-trim' default='0.0'/>
					<property name='elevator-trim' path='/elevator-trim' default='0.0'/>
					<property name='rudder-trim' path='/rudder-trim' default='0.0'/>
				</properties>
			</output>
		</module>
		<module name='io/joystick'>
			<device>/dev/input/by-id/usb-Saitek_Saitek_X52_Pro_Flight_Control_System-joystick</device>
			<path>/input/main</path>
			<axis id='0'>
				<center>0.00259</center>
				<dead-zone>0.016</dead-zone>
			</axis>
			<axis id='1'>
				<center>0.00259</center>
				<dead-zone>0.016</dead-zone>
			</axis>
		</module>
		<module name='io/joystick'>
			<device>/dev/input/js0</device>
			<path>/input/rudder</path>
		</module>
	</modules>
</xefis-include>

